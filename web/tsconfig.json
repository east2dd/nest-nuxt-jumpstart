{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "@/*": ["app/.*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    },
    "types": [
      "@types/node",
      "@types/nuxtjs__auth",
      "@types/vuelidate",
      "@nuxt/types",
      "@nuxtjs/axios",
      "@nuxtjs/auth",
      "cypress",
      "~/api/types"
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist",
    "app/test"
  ]
}
